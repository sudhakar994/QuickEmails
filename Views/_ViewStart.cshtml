@using Microsoft.AspNetCore.Http;

@{
    var sessionEmail = Html.ViewContext.HttpContext.Session.GetString("Email") != null ? Html.ViewContext.HttpContext.Session.GetString("Email").ToString() : string.Empty ;

}



@if (!string.IsNullOrEmpty(sessionEmail))
{
    Layout = "_Layout";
}
else
{
     Layout = "_LoginLayout";
}
