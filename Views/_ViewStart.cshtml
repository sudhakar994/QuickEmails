@using Microsoft.AspNetCore.Http;

@{
   
    var verificationSuccess =Html.ViewContext.HttpContext.Session.GetString("VerifictionSuccess") != null ? Html.ViewContext.HttpContext.Session.GetString("VerifictionSuccess").ToString() : string.Empty ;
}



@if (!string.IsNullOrEmpty(verificationSuccess))
{
    Layout = "_Layout";
}
else
{
     Layout = "_LoginLayout";
}
